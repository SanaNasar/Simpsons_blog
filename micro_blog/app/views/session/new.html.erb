<h1 class="bartSpeak">Login, dudes and dudettes!</h1>

<div id="mike">
    <%= form_for :user do |f| %>


      	<p><%= f.text_field :email, placeholder: "Enter your email", autofocus: true %></p>
    		<p><%= f.password_field :password, placeholder: "password" %></p>

    		<p><%= f.submit "Login", :class => "btn btn-primary text-uppercase" %>


    <p><%= link_to "Sign Up!", new_user_path %></p><br>
    <p><%= link_to "Forgot Password?", new_password_path %></p>
  <% end %>

  </p>
  </div>


