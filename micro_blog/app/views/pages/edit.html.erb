<!-- edit.html.erb -->

<div class="container">
    <div class="row">
       <div class="col-xs-offset-1 col-xs-6">
			<%= form_for @user do |f| %>
			  <%= f.label :username %>
			  <%= f.text_field :name %>
			  <%= f.label :content %>
			  <%= f.text_area :content %>
			  <%= f.submit "Update", class: "btn btn-primary" %>
			<% end %>
		</div>
 	</div>
</div>
